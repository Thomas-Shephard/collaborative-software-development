<Window x:Class="Jahoot.Display.Lecturer_Views.LecturerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Jahoot.Display.Lecturer_Views"
        Title="Lecturer Dashboard"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:TabWidthConverter x:Key="TabWidthConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <SolidColorBrush x:Key="LightBackgroundColor" Color="#F6F7FB"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="Gray"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4CAF50"/>
        <Style x:Key="StatValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <Style x:Key="StatTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
        </Style>

            <DataTemplate x:Key="RecentActivityTemplate">
                <StackPanel>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="30" Height="30" Background="#F0F0F0" CornerRadius="15" VerticalAlignment="Center">
                            <TextBlock Text="{Binding StudentInitials}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="12"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock>
                            <Run Text="{Binding DescriptionPrefix}"/>
                            <Run Text="{Binding TestName}" FontWeight="SemiBold"/>
                            </TextBlock>
                            <TextBlock Text="{Binding TimeAgo}" FontSize="12" Foreground="{StaticResource SecondaryTextColor}"/>
                        </StackPanel>

                        <Border Grid.Column="2" Padding="5,2" VerticalAlignment="Center"
                            CornerRadius="4"
                            Visibility="{Binding IsInProgress, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsInProgress}" Value="True">
                                            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <TextBlock Text="{Binding ResultOrStatus}" 
                                   FontWeight="SemiBold" 
                                   VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsInProgress}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="FontSize" Value="12"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsInProgress}" Value="False">
                                                <Setter Property="FontSize" Value="16"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                    </Grid>
                    <Separator Margin="0,5"/>
                </StackPanel>
            </DataTemplate>

    </Window.Resources>

    <Grid Background="{StaticResource LightBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#DDD" BorderThickness="0 0 0 1" Margin="0,0,0,5">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Lecturer Dashboard" FontSize="26" FontWeight="Bold" />
                    <TextBlock Text="Manage students, tests, and monitor progress"
                               Foreground="{StaticResource SecondaryTextColor}" FontSize="14" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="Lecturer" VerticalAlignment="Center" Foreground="{StaticResource SecondaryTextColor}" Margin="0,0,5,0"/>
                </StackPanel>

                <Border Grid.Column="2" Width="36" Height="36" Background="#DDD" CornerRadius="18" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="{Binding LecturerInitials}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Background="{StaticResource LightBackgroundColor}" Margin="20,0,20,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Background="White" CornerRadius="8" Margin="0,0,20,0" Padding="20">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Total Students" Style="{StaticResource StatTitleStyle}"/>
                        <TextBlock Text="👤" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Foreground="{StaticResource SecondaryTextColor}"/>
                    </Grid>
                    <TextBlock Text="{Binding TotalStudents}" Style="{StaticResource StatValueStyle}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="0,0,20,0" Padding="20">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Active Tests" Style="{StaticResource StatTitleStyle}"/>
                        <TextBlock Text="📄" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Foreground="{StaticResource SecondaryTextColor}"/>
                    </Grid>
                    <TextBlock Text="{Binding ActiveTests}" Style="{StaticResource StatValueStyle}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="White" CornerRadius="8" Margin="0,0,20,0" Padding="20">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Average Score" Style="{StaticResource StatTitleStyle}"/>
                        <TextBlock Text="👁️" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Foreground="{StaticResource SecondaryTextColor}"/>
                    </Grid>
                    <TextBlock Text="{Binding AverageScore}" Style="{StaticResource StatValueStyle}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" Background="White" CornerRadius="8" Padding="20">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Completion Rate" Style="{StaticResource StatTitleStyle}"/>
                        <TextBlock Text="✅" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Foreground="{StaticResource SecondaryTextColor}"/>
                    </Grid>
                    <TextBlock Text="{Binding CompletionRate}" Style="{StaticResource StatValueStyle}"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="White" Margin="20,0,20,0">
            <TabControl x:Name="MainTabs"
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,-2,0,-2"
                        SelectionChanged="MainTabs_SelectionChanged">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Width" Value="{Binding ActualWidth, ElementName=MainTabs, Converter={StaticResource TabWidthConverter}, ConverterParameter=6}"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Margin" Value="0,0,0,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Grid SnapsToDevicePixels="True">
                                        <Border Name="Border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter x:Name="ContentSite"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"
                                                              ContentSource="Header"
                                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="Overview" IsSelected="True"/>
                <TabItem Header="Students"/>
                <TabItem Header="Tests"/>
                <TabItem Header="Progress"/>
                <TabItem Header="Leaderboard"/>
                <TabItem Header="Admin"/>
            </TabControl>
        </Border>

        <Grid Grid.Row="3" Margin="20,10,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Recent Activity" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="Latest student activities and submissions" Foreground="{StaticResource SecondaryTextColor}" Margin="0,2,0,15"/>

                    <ItemsControl ItemsSource="{Binding RecentActivityItems}" ItemTemplate="{StaticResource RecentActivityTemplate}"/>

                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="Performance Overview" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="Subject-wise performance summary" Foreground="{StaticResource SecondaryTextColor}" Margin="0,2,0,15"/>

                    <ItemsControl ItemsSource="{Binding PerformanceSubjects}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,5">
                                    <Grid>
                                        <TextBlock Text="{Binding SubjectName}" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding ScoreText}" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                    </Grid>
                                    <ProgressBar Value="{Binding ScoreValue}" Maximum="100" Height="10" Margin="0,5,0,10" Foreground="#007ACC" Background="#E0E0E0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
