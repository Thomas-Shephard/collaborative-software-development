<Window x:Class="Jahoot.Display.Lecturer_Views.StudentManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Dashboard"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F6F7FB">
        <!-- ROWS -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="White" BorderBrush="#DDD" BorderThickness="0 0 0 1" Margin="0,0,0,5">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Lecturer Dashboard" FontSize="26" FontWeight="Bold" />
                    <TextBlock Text="Subtitle or section description goes here"
                               Foreground="Gray" FontSize="14" />
                </StackPanel>

                <Button Grid.Column="1" Content="Badge" Margin="0,0,10,0" />

                <Border Grid.Column="2" Width="36" Height="36" Background="#DDD" CornerRadius="18" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="JD" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                </Border>
            </Grid>
        </Border>

        <!-- STAT CARDS -->
        <Grid Grid.Row="1" Background="#F6F7FB" Margin="20,0,20,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Background="White" CornerRadius="8" Margin="0,0,20,0" />
            <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="0,0,20,0" />
            <Border Grid.Column="2" Background="White" CornerRadius="8" Margin="0,0,20,0" />
            <Border Grid.Column="3" Background="White" CornerRadius="8"/>
        </Grid>

        <!-- TABS -->
        <Border Grid.Row="2" Background="#F6F7FB" Margin="0,5,0,0">
            <TabControl Margin="20,0">
                <TabItem Header="Overview">
                    <Grid Background="White"/>
                </TabItem>
                <TabItem Header="Students"/>
                <TabItem Header="Tests"/>
                <TabItem Header="Progress"/>
                <TabItem Header="Leaderboard"/>
                <TabItem Header="Admin"/>
            </TabControl>
        </Border>

        <!-- CONTENT AREA -->
        <Border Grid.Row="3" Background="#F6F7FB">
            <Grid Margin="20">
                <TextBlock Text="Main content area" Foreground="Gray"/>
            </Grid>
        </Border>
    </Grid>
</Window>
