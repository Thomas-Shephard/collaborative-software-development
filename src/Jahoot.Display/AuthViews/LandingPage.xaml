<Window x:Class="Jahoot.Display.LandingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jahoot.Display"
        xmlns:controls="clr-namespace:Jahoot.Display.Controls"
        mc:Ignorable="d"
        Title="Jahoot - Landing" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007BFF"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                </Style.Triggers>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007BFF"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,30,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="MinHeight" Value="45"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.2" BlurRadius="5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="#007BFF"/>
            <Setter Property="TextDecorations" Value="None"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="20,20,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Jahoot" FontSize="32" FontWeight="Bold" Foreground="Black"/>
                    <TextBlock Text="University Centre Weston - Student testing platform" FontSize="18" Foreground="Gray"/>
                </StackPanel>

                <Image Grid.Column="1" Source="/Images/Jahoot.png" Height="50" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Grid>

            <controls:UserFeedbackBox Grid.Row="1" x:Name="FeedbackBox" Margin="20,0,20,10"/>

            <Border Grid.Row="2" Background="#F5F5F5" CornerRadius="10" Margin="20,10,20,20">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="0,0,2,0" Padding="20">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <DockPanel>
                                <Button Content="Sign In" Style="{StaticResource PrimaryButton}" Click="LoginButton_Click" DockPanel.Dock="Bottom"/>
                                <StackPanel>
                                    <TextBlock Text="Sign In" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <TextBlock Text="Access your account" FontSize="16" Foreground="Gray" Margin="0,0,0,25"/>

                                    <TextBlock Text="Email Address" Margin="0,0,0,5" FontWeight="Medium"/>
                                    <TextBox x:Name="SignInEmailTextBox" Padding="10" KeyDown="SignInForm_KeyDown"/>

                                    <TextBlock Text="Password" Margin="0,20,0,5" FontWeight="Medium"/>
                                    <PasswordBox x:Name="SignInPasswordBox" Padding="10" KeyDown="SignInForm_KeyDown"/>

                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,20,0,0">
                                        <Hyperlink Click="ForgotPassword_Click">
                                            <TextBlock Text="Forgot password?"/>
                                        </Hyperlink>
                                    </TextBlock>
                                </StackPanel>
                            </DockPanel>
                        </ScrollViewer>
                    </Border>

                    <Border Grid.Column="1" Padding="20">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <DockPanel>
                                <Button Content="Register" Style="{StaticResource PrimaryButton}" Click="RegisterButton_Click" DockPanel.Dock="Bottom"/>
                                <StackPanel>
                                    <TextBlock Text="Create Account" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <TextBlock Text="Register for access" FontSize="16" Foreground="Gray" Margin="0,0,0,25"/>

                                    <TextBlock Text="Full Name" Margin="0,0,0,5" FontWeight="Medium"/>
                                    <TextBox x:Name="RegisterFullNameTextBox" Padding="10" KeyDown="RegisterForm_KeyDown"/>

                                    <TextBlock Text="Email Address" Margin="0,20,0,5" FontWeight="Medium"/>
                                    <TextBox x:Name="RegisterEmailTextBox" Padding="10" KeyDown="RegisterForm_KeyDown"/>

                                    <TextBlock Text="Password" Margin="0,20,0,5" FontWeight="Medium"/>
                                    <PasswordBox x:Name="RegisterPasswordBox" Padding="10" KeyDown="RegisterForm_KeyDown"/>
                                    <TextBlock Text="Password must be at least 8 characters long, contain a number, an uppercase and a lowercase letter." 
                                    FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="0,5,0,0"/>

                                    <TextBlock Text="Confirm Password" Margin="0,20,0,5" FontWeight="Medium"/>
                                    <PasswordBox x:Name="RegisterConfirmPasswordBox" Padding="10" KeyDown="RegisterForm_KeyDown"/>
                                </StackPanel>
                            </DockPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
    </Grid>
</Window>
