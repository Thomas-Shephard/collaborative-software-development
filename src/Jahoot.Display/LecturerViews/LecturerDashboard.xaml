<Window x:Class="Jahoot.Display.LecturerViews.LecturerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:util="clr-namespace:Jahoot.Display.Utilities"
        xmlns:controls="clr-namespace:Jahoot.Display.Controls"
        Title="Lecturer Dashboard"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        MinWidth="800">

    <Window.Resources>
        <SolidColorBrush x:Key="LightBackgroundColor" Color="#F6F7FB"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="Gray"/>
    </Window.Resources>

    <Grid Background="{StaticResource LightBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#DDD" BorderThickness="0 0 0 1" Margin="0,0,0,5">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Lecturer Dashboard" FontSize="26" FontWeight="Bold" />
                    <TextBlock Text="Manage students, tests, and monitor progress"
                               Foreground="{StaticResource SecondaryTextColor}" FontSize="14" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="Lecturer" VerticalAlignment="Center" Foreground="{StaticResource SecondaryTextColor}" Margin="0,0,5,0"/>
                </StackPanel>

                <Border Grid.Column="2" Width="36" Height="36" Background="#DDD" CornerRadius="18" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="{Binding LecturerInitials}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Background="{StaticResource LightBackgroundColor}" Margin="20,0,20,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <controls:StatCard Grid.Column="0" Title="Total Students" Value="{Binding TotalStudents}" Icon="👤" Margin="0,0,20,0"/>
            <controls:StatCard Grid.Column="1" Title="Active Tests" Value="{Binding ActiveTests}" Icon="📄" Margin="0,0,20,0"/>
            <controls:StatCard Grid.Column="2" Title="Average Score" Value="{Binding AverageScore}" Icon="👁️" Margin="0,0,20,0"/>
            <controls:StatCard Grid.Column="3" Title="Completion Rate (%)" Value="{Binding CompletionRate}" Icon="✅"/>
        </Grid>

        <controls:NavigationalTabs Grid.Row="2"
                                   x:Name="MainTabs"
                                   ItemsSource="{Binding TabItems}"
                                   SelectedIndex="{Binding SelectedTabIndex}"
                                   SelectionChanged="MainTabs_SelectionChanged"/>

        <Grid Grid.Row="3" Margin="20,10,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <controls:RecentActivityView Grid.Column="0" ItemsSource="{Binding RecentActivityItems}"/>
            <controls:SubjectPerformanceView Grid.Column="1" ItemsSource="{Binding PerformanceSubjects}"/>
        </Grid>
    </Grid>
</Window>
