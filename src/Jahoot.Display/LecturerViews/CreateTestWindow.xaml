<Window x:Class="Jahoot.Display.LecturerViews.CreateTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Test"
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Test Name:" Grid.Row="0"/>
        <TextBox Text="{Binding TestName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Margin="0,25,0,0"/>

        <Label Content="Subject:" Grid.Row="1"/>
        <ComboBox ItemsSource="{Binding Subjects}" SelectedItem="{Binding SelectedSubject}" DisplayMemberPath="Name" Grid.Row="1" Margin="0,25,0,0"/>

        <Label Content="Number of Questions:" Grid.Row="2"/>
        <TextBox Text="{Binding NumberOfQuestions, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}" Grid.Row="2" Margin="0,25,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="4">
            <Button Content="Save" Command="{Binding SaveCommand}" Margin="0,0,10,0"/>
            <Button Content="Discard" Command="{Binding DiscardCommand}"/>
        </StackPanel>
    </Grid>
</Window>
