<UserControl x:Class="Jahoot.Display.LecturerViews.StudentManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:Jahoot.Core.Models;assembly=Jahoot.Core"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="Gray"/>
        <SolidColorBrush x:Key="RowSeparatorColor" Color="#EEEEEE"/>
        <SolidColorBrush x:Key="ButtonBorderColor" Color="#E0E0E0"/>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0,15,0,15"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource RowSeparatorColor}"/>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource RowSeparatorColor}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FAFAFA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ApproveButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RejectButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Border Background="White" CornerRadius="8" Padding="25" Margin="20,20,20,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Student Management" FontSize="26" FontWeight="Bold" Foreground="#333333"/>
                <TextBlock Text="Manage student accounts, view progress, and handle approvals"
                           Foreground="{StaticResource SecondaryTextColor}" FontSize="14" Margin="0,2,0,0"/>
            </StackPanel>

            <ListView Grid.Row="1" x:Name="StudentsListView" ItemsSource="{Binding Students}" BorderThickness="0" Background="White">
                <ListView.View>
                    <GridView>

                        <GridViewColumn Header="Student" Width="250">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Width="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=ActualWidth}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Width="36" Height="36" Background="#F0F0F0" CornerRadius="18" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Initials}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14" Foreground="#333"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="10,15" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14" Foreground="#333"/>
                                            <TextBlock Text="{Binding StudentId, StringFormat='ID: {0}'}" FontSize="12" Foreground="{StaticResource SecondaryTextColor}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Email" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Email}" VerticalAlignment="Center" Margin="0,15" Foreground="#333"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Last Login" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,15">
                                        <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Foreground="{StaticResource SecondaryTextColor}"/>
                                        <TextBlock Text="{Binding LastLogin, StringFormat='{}{0:MMM d, yyyy HH:mm}'}" 
                                                   Margin="5,0,0,0" VerticalAlignment="Center" Foreground="#333"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Status" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border VerticalAlignment="Center" CornerRadius="12" Padding="8,4">
                                        <TextBlock Text="{Binding AccountStatus}" FontWeight="SemiBold" FontSize="12"/>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E5E7EB"/>
                                                <Setter Property="TextBlock.Foreground" Value="#374151"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AccountStatus}" Value="{x:Static models:StudentAccountStatus.Active}">
                                                        <Setter Property="Background" Value="#D1FAE5"/>
                                                        <Setter Property="TextBlock.Foreground" Value="#065F46"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding AccountStatus}" Value="{x:Static models:StudentAccountStatus.Disabled}">
                                                        <Setter Property="Background" Value="#FEE2E2"/>
                                                        <Setter Property="TextBlock.Foreground" Value="#991B1B"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding AccountStatus}" Value="{x:Static models:StudentAccountStatus.PendingApproval}">
                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                        <Setter Property="TextBlock.Foreground" Value="#92400E"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Actions" Width="225">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <!-- Active Student Actions: Edit, Disable, Delete -->
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,15">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding AccountStatus}" Value="{x:Static models:StudentAccountStatus.Active}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <Button Content="Edit" Command="{Binding DataContext.EditStudentCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource ActionButtonStyle}"
                                                    Margin="0,0,5,0"
                                                    AutomationProperties.Name="{Binding Name, StringFormat='Edit {0}'}"/>
                                            <Button Content="Disable" Command="{Binding DataContext.DisableStudentCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource RejectButtonStyle}"
                                                    Margin="0,0,5,0"
                                                    AutomationProperties.Name="{Binding Name, StringFormat='Disable {0}'}"/>
                                            <Button Content="Delete" Command="{Binding DataContext.DeleteStudentCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource RejectButtonStyle}"
                                                    AutomationProperties.Name="{Binding Name, StringFormat='Delete {0}'}"/>
                                        </StackPanel>
                                        <!-- Disabled Student Actions: Edit, Enable, Delete -->
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,15">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding AccountStatus}" Value="{x:Static models:StudentAccountStatus.Disabled}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <Button Content="Edit" Command="{Binding DataContext.EditStudentCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource ActionButtonStyle}"
                                                    Margin="0,0,5,0"
                                                    AutomationProperties.Name="{Binding Name, StringFormat='Edit {0}'}"/>
                                            <Button Content="Enable" Command="{Binding DataContext.EnableStudentCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource ApproveButtonStyle}"
                                                    Margin="0,0,5,0"
                                                    AutomationProperties.Name="{Binding Name, StringFormat='Enable {0}'}"/>
                                            <Button Content="Delete" Command="{Binding DataContext.DeleteStudentCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource RejectButtonStyle}"
                                                    AutomationProperties.Name="{Binding Name, StringFormat='Delete {0}'}"/>
                                        </StackPanel>
                                        <!-- Pending Approval Student Actions: Approve, Reject -->
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,15">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding AccountStatus}" Value="{x:Static models:StudentAccountStatus.PendingApproval}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <Button Content="Approve" Command="{Binding DataContext.ApproveStudentCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource ApproveButtonStyle}"
                                                    Margin="0,0,5,0"
                                                    AutomationProperties.Name="{Binding Name, StringFormat='Approve {0}'}"/>
                                            <Button Content="Reject" Command="{Binding DataContext.RejectStudentCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource RejectButtonStyle}"
                                                    AutomationProperties.Name="{Binding Name, StringFormat='Reject {0}'}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Border>
</UserControl>
