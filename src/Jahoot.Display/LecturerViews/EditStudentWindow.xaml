<Window x:Class="Jahoot.Display.LecturerViews.EditStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Jahoot.Core.Models;assembly=Jahoot.Core"
        mc:Ignorable="d"
        Title="Edit Student" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit Student Details" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding StudentCopy.Name}" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding StudentCopy.Email}" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="Discard" Width="100" Click="DiscardButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
