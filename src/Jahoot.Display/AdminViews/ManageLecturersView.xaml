<UserControl x:Class="Jahoot.Display.AdminViews.ManageLecturersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Jahoot.Display.Controls"
             xmlns:local="clr-namespace:Jahoot.Display.AdminViews"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="Gray"/>
        <SolidColorBrush x:Key="LightBackgroundColor" Color="#F6F7FB"/>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource LightBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main Content Area -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Manage Lecturers" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock Text="View and manage lecturer accounts" Foreground="{StaticResource SecondaryTextColor}" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Refresh" Click="Refresh_Click" Margin="0,0,10,0" Padding="10,5" Background="Transparent" BorderBrush="#DDD" BorderThickness="1"/>
                        <Button Content="+ Create New Lecturer" Click="CreateLecturer_Click" Padding="15,5" Background="#007ACC" Foreground="White" BorderThickness="0" FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding Lecturers}" 
                          Style="{StaticResource ManagementDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Click="EditLecturer_Click" CommandParameter="{Binding}" 
                                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                                HorizontalAlignment="Center" Padding="4" ToolTip="Edit Lecturer" Margin="0,0,5,0">
                                            <Path Data="M3,17.25V21H6.75L17.81,9.94L14.06,6.19L3,17.25M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.13,5.12L18.88,8.87L20.71,7.04Z" 
                                                  Fill="#007ACC" 
                                                  Stretch="Uniform" Width="16" Height="16"/>
                                        </Button>
                                        <Button Click="DisableLecturer_Click" CommandParameter="{Binding}" 
                                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                                HorizontalAlignment="Center" Padding="4" ToolTip="Disable Lecturer" Margin="0,0,5,0">
                                            <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12C20,13.84 19.36,15.53 18.29,16.88L5.12,3.71C6.47,2.64 8.16,2 12,4M4,12C4,10.16 4.64,8.47 5.71,7.12L18.88,20.29C17.53,21.36 15.84,22 12,22A8,8 0 0,1 4,12Z" 
                                                  Fill="#FFA500" 
                                                  Stretch="Uniform" Width="16" Height="16"/>
                                        </Button>
                                        <Button Click="DeleteLecturer_Click" CommandParameter="{Binding}" 
                                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                                HorizontalAlignment="Center" Padding="4" ToolTip="Delete Lecturer">
                                            <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                                  Fill="#C62828" 
                                                  Stretch="Uniform" Width="16" Height="16"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Name" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Email" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Email}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTemplateColumn Header="Status" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <!-- Placeholder status -->
                                    <Border CornerRadius="12" Padding="10,4" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#E8F5E9">
                                        <TextBlock Text="Active" Foreground="#2E7D32" FontWeight="SemiBold" FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>