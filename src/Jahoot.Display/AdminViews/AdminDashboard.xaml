<Window x:Class="Jahoot.Display.Pages.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:util="clr-namespace:Jahoot.Display.Utilities"
        xmlns:controls="clr-namespace:Jahoot.Display.Controls"
        xmlns:admin="clr-namespace:Jahoot.Display.AdminViews"
        Title="Admin Dashboard"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        MinWidth="800">

    <Window.Resources>
        <SolidColorBrush x:Key="LightBackgroundColor" Color="#F6F7FB"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="Gray"/>
    </Window.Resources>

    <Grid Background="{StaticResource LightBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:DashboardHeader Grid.Row="0"
                                  AvailableRoles="{Binding AvailableRoles}"
                                  SelectedRole="{Binding SelectedRole}"
                                  UserInitials="{Binding AdminInitials}"
                                  SubHeaderText="System Administrator"/>



        <controls:NavigationalTabs Grid.Row="1"
                                   x:Name="MainTabs"
                                   ItemsSource="{Binding TabItems}"
                                   SelectedIndex="{Binding SelectedTabIndex}"
                                   SelectionChanged="MainTabs_SelectionChanged"
                                   TabWidthConverterParameter="2"/>

        <Grid Grid.Row="2" Margin="20,10,20,20">
            <!-- Tab 0: Manage Subjects -->
            <admin:ManageSubjectsView x:Name="SubjectsView" Visibility="Visible"/>

            <!-- Tab 1: Manage Lecturers -->
             <admin:ManageLecturersView x:Name="LecturersView" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
