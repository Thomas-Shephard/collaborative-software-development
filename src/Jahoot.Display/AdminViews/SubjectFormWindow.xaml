<Window x:Class="Jahoot.Display.AdminViews.SubjectFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Subject Form" Height="300" Width="450" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="White"
        TextOptions.TextFormattingMode="Display"
        UseLayoutRounding="True">
    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Subject Name" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="NameTextBox" Grid.Column="1" Style="{StaticResource FormTextBox}"/>
            </Grid>

            <Grid Grid.Row="2" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Status" Style="{StaticResource FormLabel}"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox x:Name="ActiveCheckBox" Content="Active" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>

            <TextBlock x:Name="ErrorText" Grid.Row="3" Foreground="#C62828" TextWrapping="Wrap" Margin="0,0,0,10" Visibility="Collapsed"/>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" Click="Cancel_Click" Style="{StaticResource FormCancelButton}"/>
                <Button Content="Save" Click="Save_Click" Style="{StaticResource FormSaveButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>