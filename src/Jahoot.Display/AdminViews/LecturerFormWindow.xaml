<Window x:Class="Jahoot.Display.AdminViews.LecturerFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Form" Height="400" Width="450" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="White"
        TextOptions.TextFormattingMode="Display"
        UseLayoutRounding="True">
    
    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

            <!-- Name -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Full Name" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="NameTextBox" Grid.Column="1" Style="{StaticResource FormTextBox}"/>
            </Grid>

            <!-- Email -->
            <Grid Grid.Row="2" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Email" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="EmailTextBox" Grid.Column="1" Style="{StaticResource FormTextBox}"/>
            </Grid>
            
            <!-- Roles -->
            <Grid Grid.Row="3" Margin="0,0,0,15">
                 <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Role" Style="{StaticResource FormLabel}"/>
                <CheckBox x:Name="IsAdminCheckBox" Grid.Column="1" Content="Administrator" VerticalContentAlignment="Center"/>
            </Grid>

            <!-- Password (Create Mode Only) -->
            <Grid x:Name="PasswordRow" Grid.Row="4" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Password" Style="{StaticResource FormLabel}"/>
                <PasswordBox x:Name="PasswordBox" Grid.Column="1" Style="{StaticResource FormPasswordBox}"/>
            </Grid>
            
            <!-- Reset Password Button (Edit Mode Only) -->
            <Grid x:Name="ResetPasswordRow" Grid.Row="4" Margin="0,0,0,15" Visibility="Collapsed">
                 <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Password" Style="{StaticResource FormLabel}"/>
                <Button x:Name="ResetPasswordButton" Grid.Column="1" Content="Reset Password" Click="ResetPassword_Click" 
                        HorizontalAlignment="Left" Padding="10,5" Background="#EEE" Foreground="#333" BorderThickness="0">
                     <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

            <TextBlock x:Name="ErrorText" Grid.Row="5" Foreground="#C62828" TextWrapping="Wrap" Margin="0,0,0,10" Visibility="Collapsed"/>

            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" Click="Cancel_Click" Style="{StaticResource FormCancelButton}"/>
                <Button Content="Save" Click="Save_Click" Style="{StaticResource FormSaveButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>