<Application x:Class="Jahoot.Display.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Jahoot.Display"
             xmlns:converters="clr-namespace:Jahoot.Display.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <converters:BooleanToStatusConverter x:Key="BooleanToStatusConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <Style TargetType="Window">
                <Setter Property="Icon" Value="/Jahoot.ico" />
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/DataGridStyles.xaml"/>
                <ResourceDictionary Source="Resources/FormStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
