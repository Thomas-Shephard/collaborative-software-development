<UserControl x:Class="Jahoot.Display.StudentViews.TestTakingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#F6F7FB">

    <UserControl.Resources>
        <Style x:Key="NavigationButton" TargetType="Button">
            <Setter Property="Background" Value="#2B7FFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Arimo"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E6FE6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#2B7FFF"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OptionButton" TargetType="RadioButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#0A0A0A"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Arimo"/>
            <Setter Property="Padding" Value="25,16"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2B7FFF"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EFF6FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2B7FFF"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20,10,20,20">
        <!-- Main Container -->
        <Border Background="White"
                BorderBrush="#F3F4F6"
                BorderThickness="1"
                CornerRadius="10"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.1" BlurRadius="3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <Border Grid.Row="0" 
                        Background="#F9FAFB" 
                        BorderBrush="#F3F4F6" 
                        BorderThickness="0,0,0,1"
                        Padding="32,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Subject Title -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="??" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SubjectName}" 
                                       FontSize="16" 
                                       FontFamily="Arimo"
                                       Foreground="#364153"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Time Remaining Badge -->
                        <Border Grid.Column="1"
                                Background="#FFFBEB"
                                BorderBrush="#FEE685"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="16,10"
                                Margin="0,0,16,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="?" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock FontSize="16" 
                                           FontFamily="Arimo"
                                           Foreground="#7B3306"
                                           VerticalAlignment="Center">
                                    <Run Text="Time Remaining: "/>
                                    <Run Text="{Binding TimeRemaining}" FontWeight="SemiBold"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Question Counter -->
                        <TextBlock Grid.Column="2"
                                   Text="{Binding QuestionNumberText}"
                                   FontSize="16"
                                   FontFamily="Arimo"
                                   Foreground="#364153"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Content Section -->
                <Grid Grid.Row="1" Margin="32,32,32,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Question Display -->
                    <Border Grid.Row="0"
                            Background="#F9FAFB"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="25"
                            Margin="0,0,0,32">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="?" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Top"/>
                            <StackPanel>
                                <TextBlock Text="Question" 
                                           FontSize="18"
                                           FontFamily="Arimo"
                                           FontWeight="Regular"
                                           Foreground="#0A0A0A"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding CurrentQuestionText}"
                                           FontSize="16"
                                           FontFamily="Arimo"
                                           Foreground="#4A5565"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Answer Options -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CurrentOptions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Style="{StaticResource OptionButton}"
                                                 Content="{Binding OptionText}"
                                                 IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                 GroupName="QuestionOptions"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Navigation Footer -->
                    <Border Grid.Row="2"
                            BorderBrush="#F3F4F6"
                            BorderThickness="0,1,0,0"
                            Padding="0,24,0,32">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Back Button -->
                            <Button Grid.Column="0"
                                    Style="{StaticResource NavigationButton}"
                                    Command="{Binding BackCommand}"
                                    MinWidth="110">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="?" Margin="0,0,8,0" FontSize="14"/>
                                    <TextBlock Text="Back"/>
                                </StackPanel>
                            </Button>

                            <!-- Next/Submit Button -->
                            <Button Grid.Column="2"
                                    MinWidth="110">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="ButtonText">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Next"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLastQuestion}" Value="True">
                                                            <Setter Property="Text" Value="Submit"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Margin="8,0,0,0" FontSize="14">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="?"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLastQuestion}" Value="True">
                                                            <Setter Property="Text" Value="?"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Button.Content>
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource NavigationButton}">
                                        <Setter Property="Command" Value="{Binding NextCommand}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLastQuestion}" Value="True">
                                                <Setter Property="Command" Value="{Binding SubmitCommand}"/>
                                                <Setter Property="Background" Value="#10B981"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
