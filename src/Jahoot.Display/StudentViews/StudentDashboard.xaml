<Window x:Class="Jahoot.Display.StudentViews.StudentDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:util="clr-namespace:Jahoot.Display.Utilities"
             xmlns:controls="clr-namespace:Jahoot.Display.Controls"
             Title="Student Dashboard"
             Height="800" Width="1200"
             WindowStartupLocation="CenterScreen"
             MinWidth="800"
             Background="#F6F7FB">
    <Window.Resources>
        <util:TabWidthConverter x:Key="TabWidthConverter"/>
        <SolidColorBrush x:Key="LightBackgroundColor" Color="#F6F7FB"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="Gray"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4CAF50"/>

        <Style x:Key="StatValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <Style x:Key="StatTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
        </Style>

        <DataTemplate x:Key="AvailableTestTemplate">
            <Border Background="#F9FAFB" CornerRadius="8" Padding="20" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Course}" FontSize="14" Foreground="{StaticResource SecondaryTextColor}"/>
                    <TextBlock Text="{Binding TestInfo}" FontSize="14" Foreground="#4A5565"/>
                    <TextBlock Text="{Binding DueDate, StringFormat='Due: {0:MMM d, yyyy}'}" FontSize="14" Foreground="#4A5565"/>
                    <Button Content="Take Test" Background="#2B7FFF" Foreground="White" FontSize="16" Padding="10,5" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="CompletedTestTemplate">
            <Border Background="#F9FAFB" CornerRadius="8" Padding="20" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Course}" FontSize="14" Foreground="{StaticResource SecondaryTextColor}"/>
                    <TextBlock Text="{Binding TestInfo}" FontSize="14" Foreground="#4A5565"/>
                    <TextBlock Text="{Binding Date, StringFormat='Completed: {0:MMM d, yyyy}'}" FontSize="14" Foreground="#4A5565"/>
                    <TextBlock Text="{Binding Score, StringFormat='Score: {0:0}%'}" FontSize="16" FontWeight="Bold" Foreground="#016630" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>

    </Window.Resources>
    <Grid Background="{StaticResource LightBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#DDD" BorderThickness="0 0 0 1" Margin="0,0,0,5">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Student Dashboard" FontSize="26" FontWeight="Bold" />
                    <TextBlock Text="View your available tests, completed assignments, and performance statistics"
                               Foreground="{StaticResource SecondaryTextColor}" FontSize="14" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="Student" VerticalAlignment="Center" Foreground="{StaticResource SecondaryTextColor}" Margin="0,0,5,0"/>
                </StackPanel>
                <Border Grid.Column="2" Width="36" Height="36" Background="#DDD" CornerRadius="18" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="ST" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                </Border>
            </Grid>
        </Border>
        <!-- Stat Cards -->
        <Grid Grid.Row="1" Background="{StaticResource LightBackgroundColor}" Margin="20,0,20,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <controls:StatCard Grid.Column="0" Title="Tests Available" Value="{Binding TestsAvailable}" Icon="ðŸ“„" Margin="0,0,20,0"/>
            <controls:StatCard Grid.Column="1" Title="Tests Completed" Value="{Binding TestsCompleted}" Icon="âœ…" Margin="0,0,20,0"/>
            <controls:StatCard Grid.Column="2" Title="Average Score" Value="{Binding AverageScoreDisplay}" Icon="ðŸŽ¯" Margin="0,0,20,0"/>
            <controls:StatCard Grid.Column="3" Title="Upcoming Due Dates" Value="{Binding UpcomingDueDates}" Icon="ðŸ“…"/>
                    </Grid>
        </Grid>
        <!-- Tabs -->
        <controls:NavigationalTabs Grid.Row="2"
                                   x:Name="MainTabs"
                                   ItemsSource="{Binding TabItems}"
                                   SelectedIndex="{Binding SelectedTabIndex}"
                                   SelectionChanged="MainTabs_SelectionChanged"/>

        <Grid Grid.Row="3" Margin="20,10,20,20">
            <!-- Overview Content -->
            <Grid Visibility="{Binding OverviewVisibility}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <controls:RecentActivityView Grid.Column="0" ItemsSource="{Binding RecentActivityItems}"/>
                <controls:SubjectPerformanceView Grid.Column="1" ItemsSource="{Binding PerformanceSubjects}"/>
                                    </Grid>

            <!-- Other Tab Content -->
            <ContentControl Visibility="{Binding OtherContentVisibility}" Content="{Binding CurrentView}"/>
        </Grid>
    </Grid>
</Window>
