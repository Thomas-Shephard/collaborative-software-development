<Window x:Class="Jahoot.Display.StudentViews.StudentDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:util="clr-namespace:Jahoot.Display.Utilities"
             xmlns:controls="clr-namespace:Jahoot.Display.Controls"
             Title="Student Dashboard"
             Height="800" Width="1200"
             WindowStartupLocation="CenterScreen"
             MinWidth="800"
             Background="#F6F7FB">
    <Window.Resources>
        <util:TabWidthConverter x:Key="TabWidthConverter"/>
        <SolidColorBrush x:Key="LightBackgroundColor" Color="#F6F7FB"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="Gray"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4CAF50"/>

        <Style x:Key="StatValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <Style x:Key="StatTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
        </Style>

        <DataTemplate x:Key="AvailableTestTemplate">
            <Border Background="#F9FAFB" CornerRadius="8" Padding="20" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Course}" FontSize="14" Foreground="{StaticResource SecondaryTextColor}"/>
                    <TextBlock Text="{Binding TestInfo}" FontSize="14" Foreground="#4A5565"/>
                    <TextBlock Text="Due: {Binding DueDate, StringFormat='{}{0:MMM d, yyyy}'}" FontSize="14" Foreground="#4A5565"/>
                    <Button Content="Take Test" Background="#2B7FFF" Foreground="White" FontSize="16" Padding="10,5" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="CompletedTestTemplate">
            <Border Background="#F9FAFB" CornerRadius="8" Padding="20" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Course}" FontSize="14" Foreground="{StaticResource SecondaryTextColor}"/>
                    <TextBlock Text="{Binding TestInfo}" FontSize="14" Foreground="#4A5565"/>
                    <TextBlock Text="Completed: {Binding Date, StringFormat='{}{0:MMM d, yyyy}'}" FontSize="14" Foreground="#4A5565"/>
                    <TextBlock Text="Score: {Binding Score, StringFormat='{}{0:0}%'}" FontSize="16" FontWeight="Bold" Foreground="#016630" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>

    </Window.Resources>
    <Grid Background="{StaticResource LightBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#DDD" BorderThickness="0 0 0 1" Margin="0,0,0,5">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Student Dashboard" FontSize="26" FontWeight="Bold" />
                    <TextBlock Text="View your available tests, completed assignments, and performance statistics"
                               Foreground="{StaticResource SecondaryTextColor}" FontSize="14" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="Student" VerticalAlignment="Center" Foreground="{StaticResource SecondaryTextColor}" Margin="0,0,5,0"/>
                </StackPanel>
                <Border Grid.Column="2" Width="36" Height="36" Background="#DDD" CornerRadius="18" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="ST" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                </Border>
            </Grid>
        </Border>
        <!-- Stat Cards -->
        <Grid Grid.Row="1" Background="{StaticResource LightBackgroundColor}" Margin="20,0,20,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border Background="White" CornerRadius="8" Margin="0,0,20,0" Padding="20">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Tests Available" Style="{StaticResource StatTitleStyle}"/>
                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Foreground="{StaticResource SecondaryTextColor}"/>
                    </Grid>
                    <TextBlock Text="{Binding TestsAvailable}" Style="{StaticResource StatValueStyle}"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="0,0,20,0" Padding="20">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Tests Completed" Style="{StaticResource StatTitleStyle}"/>
                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Foreground="{StaticResource SecondaryTextColor}"/>
                    </Grid>
                    <TextBlock Text="{Binding TestsCompleted}" Style="{StaticResource StatValueStyle}"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2" Background="White" CornerRadius="8" Margin="0,0,20,0" Padding="20">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Average Score" Style="{StaticResource StatTitleStyle}"/>
                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Foreground="{StaticResource SecondaryTextColor}"/>
                    </Grid>
                    <TextBlock Text="{Binding AverageScoreDisplay}" Style="{StaticResource StatValueStyle}"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="3" Background="White" CornerRadius="8" Padding="20">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Upcoming Due Dates" Style="{StaticResource StatTitleStyle}"/>
                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Foreground="{StaticResource SecondaryTextColor}"/>
                    </Grid>
                    <TextBlock Text="{Binding UpcomingDueDates}" Style="{StaticResource StatValueStyle}"/>
                </StackPanel>
            </Border>
        </Grid>
        <!-- Tabs -->
        <Border Grid.Row="2" Background="White" Margin="20,0,20,0">
            <TabControl x:Name="MainTabs"
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,-2,0,-2"
                        SelectionChanged="MainTabs_SelectionChanged">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Width" Value="{Binding ActualWidth, ElementName=MainTabs, Converter={StaticResource TabWidthConverter}, ConverterParameter=4}"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Margin" Value="0,0,0,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Grid SnapsToDevicePixels="True">
                                        <Border Name="Border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter x:Name="ContentSite"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"
                                                              ContentSource="Header"
                                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="Available Tests" IsSelected="True"/>
                <TabItem Header="Completed Tests"/>
                <TabItem Header="Leaderboard"/>
                <TabItem Header="Statistics"/>
            </TabControl>
        </Border>
        <!-- Recent Activity & Performance Overview -->
        <ContentControl Grid.Row="3" x:Name="MainContent" Margin="20,10,20,20"/>
    </Grid>
</Window>
