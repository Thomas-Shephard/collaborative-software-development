<Window x:Class="Jahoot.Display.StudentViews.StudentDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Jahoot.Display.Controls"
        xmlns:utilities="clr-namespace:Jahoot.Display.Utilities"
        Title="Student Dashboard"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        MinWidth="800">

    <Window.Resources>
        <SolidColorBrush x:Key="LightBackgroundColor" Color="#F6F7FB"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="Gray"/>
        <utilities:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <utilities:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Background="{StaticResource LightBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Always visible header -->
        <controls:DashboardHeader Grid.Row="0"
                                  AvailableRoles="{Binding AvailableRoles}"
                                  SelectedRole="{Binding SelectedRole}"
                                  UserInitials="{Binding StudentInitials}"
                                  SubHeaderText="View your available tests, completed assignments, and performance statistics"/>

        <!-- Stats Cards - hide when showing test -->
        <Grid Grid.Row="1" 
              Background="{StaticResource LightBackgroundColor}" 
              Margin="20,0,20,15"
              Visibility="{Binding IsShowingTest, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <controls:StatCard Grid.Column="0" Title="Tests Available" Value="{Binding UpcomingTests}" Icon="??" Margin="0,0,20,0"/>
            <controls:StatCard Grid.Column="1" Title="Tests Completed" Value="{Binding CompletedTests}" Icon="?" Margin="0,0,20,0"/>
            <controls:StatCard Grid.Column="2" Title="Average Score" Value="{Binding AverageScore}" Icon="??" Margin="0,0,20,0"/>
            <controls:StatCard Grid.Column="3" Title="Current Grade" Value="{Binding CurrentGrade}" Icon="??"/>
        </Grid>

        <!-- Tabs - hide when showing test -->
        <controls:NavigationalTabs Grid.Row="2"
                                   x:Name="MainTabs"
                                   ItemsSource="{Binding TabItems}"
                                   SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}"
                                   SelectionChanged="MainTabs_SelectionChanged"
                                   TabWidthConverterParameter="4"
                                   Visibility="{Binding IsShowingTest, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

        <!-- Dashboard Content - hide when showing test -->
        <Grid Grid.Row="3" 
              Margin="20,10,20,20"
              Visibility="{Binding IsShowingTest, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <!-- Tab 0: Available Tests -->
            <Grid Visibility="{Binding AvailableTestsVisibility}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Loading Indicator -->
                <Border Grid.Row="0" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="?" 
                                   FontSize="48" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="Loading upcoming tests..." 
                                   FontSize="16" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Test List -->
                <controls:TestListView 
                    Grid.Row="0"
                    Title="Available Tests" 
                    Subtitle="Tests you need to complete"
                    ItemsSource="{Binding UpcomingTestItems}"
                    ItemClickCommand="{Binding TestItemClickCommand}"
                    Margin="0,0,10,0"
                    Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
            </Grid>

            <!-- Tab 1: Completed Tests -->
            <Grid Visibility="{Binding CompletedTestsVisibility}">
                <controls:TestListView 
                    Title="Completed Tests" 
                    Subtitle="Your test history and scores"
                    ItemsSource="{Binding CompletedTestItems}"
                    Margin="0,0,10,0"/>
            </Grid>

            <!-- Tab 2: Leaderboard (Pending Implementation) -->
            <Grid Visibility="{Binding LeaderboardVisibility}">
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="40" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        MinWidth="400"
                        MinHeight="300">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="??" 
                                   FontSize="48" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="Leaderboard" 
                                   FontSize="24" 
                                   FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Feature coming soon!" 
                                   FontSize="16" 
                                   Foreground="Gray" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Compare your performance with other students" 
                                   FontSize="14" 
                                   Foreground="Gray" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   MaxWidth="300"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Tab 3: Statistics (Grades Over Time) -->
            <Grid Visibility="{Binding StatisticsVisibility}">
                <controls:GradesChartView 
                    ItemsSource="{Binding GradeHistory}"/>
            </Grid>
        </Grid>

        <!-- Test Taking View - show when test is active -->
        <ContentControl Grid.Row="3"
                        Content="{Binding CurrentView}"
                        Visibility="{Binding IsShowingTest, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</Window>
