<UserControl x:Class="Jahoot.Display.Controls.LeaderboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:util="clr-namespace:Jahoot.Display.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <util:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <util:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverter"/>
        <util:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <util:RankToBackgroundConverter x:Key="RankToBackgroundConverter"/>
        <util:RankToHeightConverter x:Key="RankToHeightConverter"/>
        
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#717182"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="PrimaryTextColor" Color="#0A0A0A"/>
        
        <!-- Rank-specific colors matching design -->
        <SolidColorBrush x:Key="GoldBackground" Color="#FEFCE8"/>
        <SolidColorBrush x:Key="GoldMedal" Color="#F0B100"/>
        <SolidColorBrush x:Key="SilverBackground" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="SilverMedal" Color="#99A1AF"/>
        <SolidColorBrush x:Key="BronzeBackground" Color="#FFF7ED"/>
        <SolidColorBrush x:Key="BronzeMedal" Color="#FF6900"/>
        
        <!-- Data template for leaderboard entries -->
        <DataTemplate x:Key="LeaderboardEntryTemplate">
            <Border Background="{Binding Rank, Converter={StaticResource RankToBackgroundConverter}}"
                    CornerRadius="10" 
                    Padding="17"
                    Margin="0,0,0,16"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    Height="{Binding Rank, Converter={StaticResource RankToHeightConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Medal Icon Circle (for top 3) OR Rank number (for 4-5) -->
                    <Grid Grid.Column="0" Width="48" VerticalAlignment="Center">
                        <!-- Medal circle for top 3 -->
                        <Border Width="48" 
                                Height="48"
                                CornerRadius="24"
                                VerticalAlignment="Center"
                                Visibility="{Binding RankIcon, Converter={StaticResource NullToVisibilityConverter}}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Rank}" Value="1">
                                            <Setter Property="Background" Value="{StaticResource GoldMedal}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Rank}" Value="2">
                                            <Setter Property="Background" Value="{StaticResource SilverMedal}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Rank}" Value="3">
                                            <Setter Property="Background" Value="{StaticResource BronzeMedal}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="??" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Rank number for 4-5 -->
                        <TextBlock Text="{Binding Rank}"
                                   FontSize="16"
                                   Foreground="{StaticResource SecondaryTextColor}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Visibility="{Binding RankIcon, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                    </Grid>

                    <!-- Student Avatar -->
                    <Border Grid.Column="1"
                            Width="40"
                            Height="40"
                            CornerRadius="20"
                            Background="#ECECF0"
                            Margin="16,0,12,0"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding StudentInitials}"
                                   FontSize="16"
                                   Foreground="{StaticResource PrimaryTextColor}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Student Info -->
                    <StackPanel Grid.Column="2" 
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding StudentName}"
                                   FontSize="16"
                                   Foreground="{StaticResource PrimaryTextColor}"
                                   FontWeight="Regular"/>
                        <TextBlock Text="{Binding Score, StringFormat='{}{0:0.0}% average'}"
                                   FontSize="14"
                                   Foreground="#6A7282"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Rank Badge -->
                    <Border Grid.Column="3"
                            VerticalAlignment="Center"
                            CornerRadius="8"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BorderColor}"
                            Padding="8,2"
                            Height="22">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Rank}" Value="1">
                                        <Setter Property="Background" Value="#FEF9C2"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding RankDisplay}"
                                   FontSize="12" 
                                   Foreground="{StaticResource PrimaryTextColor}"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Leaderboard" 
                       FontSize="24" 
                       FontWeight="Regular"
                       Foreground="{StaticResource PrimaryTextColor}"/>
            <TextBlock Text="Top 5 performers by subject" 
                       Foreground="{StaticResource SecondaryTextColor}" 
                       FontSize="16" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Subject Selector -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="14" 
                Padding="24"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="Select Subject:" 
                           FontSize="16"
                           Foreground="{StaticResource PrimaryTextColor}"
                           Margin="0,0,0,10"/>
                <ComboBox ItemsSource="{Binding Subjects}"
                          SelectedItem="{Binding SelectedSubject}"
                          FontSize="14"
                          Padding="10,8"
                          MinWidth="200"
                          HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>

        <!-- Leaderboard Card -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="14" 
                Padding="24"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Card Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,24">
                    <TextBlock Text="{Binding SelectedSubject, StringFormat='{}{0} Leaderboard'}"
                               FontSize="16" 
                               Foreground="{StaticResource PrimaryTextColor}"/>
                    <TextBlock Text="{Binding SelectedSubject, StringFormat='Top 5 students in {0}'}"
                               FontSize="16"
                               Foreground="{StaticResource SecondaryTextColor}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Scrollable Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Empty state -->
                        <TextBlock Text="No leaderboard data available yet." 
                                   Foreground="{StaticResource SecondaryTextColor}"
                                   FontStyle="Italic"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Margin="0,40,0,0"
                                   Visibility="{Binding LeaderboardEntries.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                        
                        <!-- Leaderboard entries -->
                        <ItemsControl ItemsSource="{Binding LeaderboardEntries}"
                                      ItemTemplate="{StaticResource LeaderboardEntryTemplate}"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
